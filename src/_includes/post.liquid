---
layout: main
---

{% include nav %}

<p class="text-5xl md:text-6xl font-black pt-10 md:pt-30 pb-4 leading-tight">
    {{ title}}
</p>

<div>
    <em>{{ date | date: "%Y-%m-%d" }}</em> &middot; 
    <span>{{ content | readTime }} min read</span>
</div>

<div class="mt-3 pb-10">
{% for tag in tags %}
  {% if tag != "posts" %}
    <a href="/tags/{{ tag }}">
      <span class="text-xs rounded-full py-2 px-4 mt-1 mr-1 bg-gray-300">{{ tag }}</span>
    </a>
  {% endif %}
{% endfor %}
</div>

<div class="prose">
  {{ content }}
</div>

{% include author %}